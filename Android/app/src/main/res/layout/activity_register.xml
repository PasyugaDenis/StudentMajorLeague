<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/user_password"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:layout_weight="1"
        android:hint="@string/password_title"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/user_confirm_password"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:layout_weight="1"
        android:hint="@string/confirm_password_title"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/user_email"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:layout_weight="1"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/user_name"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_weight="1"
        android:hint="@string/name_title"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/user_surname"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:layout_weight="1"
        android:hint="@string/surname_title"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/user_birthday"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:layout_weight="1"
        android:hint="@string/birthday_title"
        android:inputType="date" />

    <EditText
        android:id="@+id/user_league"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:layout_weight="1"
        android:hint="@string/league_title"
        android:inputType="textPersonName" />

    <Button
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="51dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="80dp"
        android:background="@android:color/holo_blue_light"
        android:text="@string/register_title" />

    <Button
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="49dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="30dp"
        android:background="@android:color/darker_gray"
        android:onClick="login"
        android:text="@string/authorization_title" />
</RelativeLayout>